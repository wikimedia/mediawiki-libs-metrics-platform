{
	"name": "wikimedia/metrics-platform",
	"description": "Client libraries for Wikimedia analytics instrumentation",
	"homepage": "https://wikitech.wikimedia.org/wiki/Metrics_Platform",
	"license": "GPL-2.0-or-later",
	"autoload": {
		"psr-4": {
			"Wikimedia\\Metrics\\": "php/src/"
		}
	},
	"require": {
		"php": ">=7.2.34",
		"justinrainbow/json-schema": "5.2.11",
		"psr/log": "1.1.4"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "38.0.0",
		"mediawiki/mediawiki-phan-config": "0.11.1",
		"mediawiki/minus-x": "1.1.1",
		"ockcyp/covers-validator": "1.4.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.3.1",
		"phpunit/phpunit": "^8.5",
		"wikimedia/testing-access-wrapper": "2.0.0",
		"wikimedia/timestamp": "3.0.0"
	},
	"scripts": {
		"lint": "parallel-lint . --exclude vendor",
		"phan": "phan -d . -p --require-config-exists --allow-polyfill-parser --long-progress-bar",
		"phpcs": "phpcs -p -s",
		"test": [
			"phpunit",
			"@lint",
			"@phpcs",
			"covers-validator",
			"minus-x check .",
			"@phan"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"coverage-html": "phpunit --coverage-html docs/coverage php/tests/"
	}
}
