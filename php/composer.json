{
  "name": "wikimedia/metrics-platform",
  "description": "Client libraries for Wikimedia analytics instrumentation",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "Wikimedia\\Metrics\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wikimedia\\Metrics\\Test\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.2.34"
  },
  "require-dev": {
    "mediawiki/mediawiki-codesniffer": "35.0.0",
    "mediawiki/minus-x": "1.1.1",
    "ockcyp/covers-validator": "1.3.3",
    "php-parallel-lint/php-console-highlighter": "0.5.0",
    "php-parallel-lint/php-parallel-lint": "1.2.0",
    "phpunit/phpunit": "^8.5",
    "wikimedia/testing-access-wrapper": "2.0.0",
    "wikimedia/timestamp": "3.0.0"
  },
  "scripts": {
    "phpunit": "phpunit",
    "lint": "parallel-lint . --exclude vendor",
    "phpcs": "phpcs -sp --ignore=*vendor/*",
    "test": [
      "@phpunit",
      "@lint",
      "@phpcs",
      "covers-validator",
      "minus-x check ."
    ],
    "fix": [
      "minus-x fix .",
      "phpcbf --ignore=*/vendor/*"
    ]
  }
}
